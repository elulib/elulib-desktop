{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "élulib",
  "version": "0.1.0",
  "identifier": "com.elulib.desktop",
  "build": {
    "frontendDist": "./static"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src 'self' https://app.elulib.com; img-src 'self' https://app.elulib.com data:; script-src 'self' https://app.elulib.com; style-src 'self' https://app.elulib.com; connect-src 'self' https://app.elulib.com;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "public.app-category.productivity",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/mac-1024.icns",
      "icons/win-1024.ico"
    ],
    "copyright": "Copyright © 2025 élulib",
    "licenseFile": "../LICENSE",
    "resources": ["./static"],
    "externalBin": [],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": "fr-FR",
        "dialogImagePath": "icons/dialog_background.bmp",
        "bannerPath": "icons/dialog_banner.bmp",
        "upgradeCode": "1e0b22b6-2e64-57b5-9426-aba74e719e85"
      },
      "nsis": {
        "installMode": "currentUser",
        "languages": ["French"],
        "installerIcon": "icons/win-1024.ico",
        "headerImage": "icons/dialog_signature.bmp",
        "sidebarImage": "icons/dialog_sidebar.bmp"
      }
    },
    "macOS": {
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "height": 400, "width": 660 }
      },
      "files": {},
      "infoPlist": "Info.plist",
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/elulib/desktop-app/releases/latest/download/tauri.update.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNBQkJEODU1NTU2MjdGOUEKUldTYWYySlZWZGk3T2tveHl6RDltbXk4a3pYaUlSUGpUQmV6QlhCY3BGdStETnpsUVBQNDRrM1YK"
