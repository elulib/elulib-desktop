{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "élulib",
  "version": "0.1.0",
  "identifier": "com.elulib.desktop",
  "build": {},
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "élulib",
        "width": 1024,
        "minWidth": 480,
        "height": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "url": "https://app.elulib.com"
      }
    ],
    "security": {
      "csp": "default-src 'self' https://app.elulib.com; img-src 'self' https: data:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://api.github.com;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "public.app-category.productivity",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Copyright © 2025 élulib",
    "resources": [],
    "externalBin": [],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": "fr‑FR"
      },
      "certificateThumbprint": ""
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/elulib/desktop-app/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNBQkJEODU1NTU2MjdGOUEKUldTYWYySlZWZGk3T2tveHl6RDltbXk4a3pYaUlSUGpUQmV6QlhCY3BGdStETnpsUVBQNDRrM1YK"
    }
  }
}